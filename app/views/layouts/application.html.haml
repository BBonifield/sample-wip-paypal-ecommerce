!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "WIP"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    -# %link(href="images/favicon.ico" rel="shortcut icon")


  %body{ :data => { :controller => controller_name, :action => action_name } }
    .container
      = render 'shared/application_layout/search_header'
      = render 'shared/application_layout/primary_navigation'

      .row
        - if content_for? :sidebar
          .span3
            = render 'shared/application_layout/sidebar'
          .span9
            = bootstrap_flash
            = yield
        - else
          .span12
            = bootstrap_flash
            = yield


      = render 'shared/application_layout/footer'
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
