.row
  .offset2.span8
    %h1 Create Your Account
    %h4
      Already have an account?
      = link_to "Login now.", login_path

    - if @user.errors.any?
      .alert.alert-error
        %h4 There was an error processing your request.
        %p Please fix the errors below and try again.

    = twitter_bootstrap_form_for @user, :html => { :class => 'form-horizontal' } do |f|
      = f.text_field :user_name, "User Name", :placeholder => "johndoe797"
      .controls
        %p * This will be the name displayed to other users on the site.
      = f.text_field :email, "E-Mail", :placeholder => "user@domain.com"
      = f.text_field :first_name, "First Name"
      = f.text_field :last_name, "Last Name"
      = f.fields_for :addresses do |address_f|
        = address_f.text_field :address_1, :class => 'span4'
        = address_f.text_field :address_2, :class => 'span4'
        = address_f.text_field :city
        = address_f.text_field :state, :class => 'span1'
        = address_f.text_field :zip_code, "Zip Code", :class => 'span2'
      = f.password_field :password, "Choose Password"
      = f.password_field :password_confirmation, "Confirm Password"

      .form-actions
        = f.submit "Create Account", :class => 'btn btn-primary btn-large'
