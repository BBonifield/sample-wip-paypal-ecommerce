%header#search-header
  = link_to '', root_path, :class => 'sprite-logo'
  .search
    =form_tag search_postings_path, :method => :get, :class => 'form-inline' do
      .input-prepend
        .btn-group
          %span.btn.dropdown-toggle{ :data => { :toggle => "dropdown" } }
            All
            %span.caret
          %ul.dropdown-menu
            %li= link_to 'All', '#'
            %li.divider
            %li= link_to '@todo cat 1', '#'
            %li= link_to '@todo cat 2', '#'
            %li= link_to '@todo cat 3', '#'
            %li= link_to '@todo cat 4', '#'
            %li= link_to '@todo cat 5', '#'
        = text_field_tag "search_string", params[:search_string], :class => "span4"
      %span.dollar-sign $
      = text_field_tag "search_price", params[:search_price], :class => "span1"
      = submit_tag "Search", :name => nil, :class => "btn btn-primary"
  .help help
