= twitter_bootstrap_form_for @address, :html => { :class => 'form-horizontal' } do |f|
  = f.text_field :name, :class => 'span4'
  = f.text_field :address_1, :class => 'span4'
  = f.text_field :address_2, :class => 'span4'
  = f.text_field :city
  = f.text_field :state, :class => 'span1'
  = f.text_field :zip_code, :class => 'span2'
  = f.label 'Defaults' do |controls|
    = controls.check_box :is_default_shipping, 'Use this address as my default shipping address'
    = controls.check_box :is_default_billing, 'Use this address as my default billing address'

  .form-actions
    = f.submit (@address.persisted? ? 'Update' : 'Create'), :class => 'btn btn-primary pull-right'
