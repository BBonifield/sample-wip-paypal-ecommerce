= render 'shared/accounts/sidebar'
%h1 Change Password

= twitter_bootstrap_form_for current_user, :url => change_password_account_path, :method => :put, :html => {:class => 'form-horizontal'} do |f|
  .control-group
    %label.control-label{ :for => 'old_password' } Old Password
    .controls
      = password_field_tag 'old_password'
  = f.password_field :password, 'New Password'
  = f.password_field :password_confirmation, 'Re-Type New Password'
  .form-actions
    = f.submit 'Change', :class => 'btn btn-primary pull-right'
