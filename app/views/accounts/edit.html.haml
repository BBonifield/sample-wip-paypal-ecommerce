= render 'shared/accounts/sidebar'
%h1 Update Basic Account Details

= twitter_bootstrap_form_for current_user, :url => account_path, :html => {:class => 'form-horizontal'} do |f|
  = f.text_field :user_name, 'User Name'
  = f.text_field :first_name, 'First Name'
  = f.text_field :last_name, 'Last Name'
  = f.text_field :email, 'E-Mail'
  .form-actions
    = f.submit 'Update', :class => 'btn btn-primary pull-right'
